---
Checks: >
  clang-analyzer-*,
  bugprone-*,
  performance-*,
  readability-*, 
  modernize-use-nullptr,
  modernize-use-override,
  misc-unused-parameters,
  hicpp-member-init,
  -readability-magic-numbers,
  -performance-inefficient-vector-operation

WarningsAsErrors: 'clang-analyzer-*'

# HeaderFilterRegex: '.*'
HeaderFilterRegex: 'src/.*'   # не проверяем generated/

FormatStyle: file

CheckOptions:
  - key:             readability-braces-around-statements.ShortStatementLines
    value:           1
  - key: bugprone-reserved-identifier.IgnoreGlob
    value: 'build/generated/*'
  - key: readability-identifier-length.IgnoreGlob
    value: 'build/generated/*'